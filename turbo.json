{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "ALL_SCRAPS_DB",
    "BLOGS_DB",
    "BYPASS_TOKEN",
    "COMMISSIONS_DB",
    "ILLUSTRATIONS_DB",
    "NOTION_KEY",
    "POEM_SECTIONS_DB",
    "PROFESSIONAL_DB",
    "STUDIO_DB",
    "SUBSCRIBERS_DB",
    "USER_ID_ALICE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "lint:fix": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
